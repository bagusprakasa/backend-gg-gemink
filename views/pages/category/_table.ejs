<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name Category</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i<data.length; i++) { %>
      <tr>
        <td><%= i+1 %> </td>
        <td><%= data[i].name %> </td>
        <td>
          <form action="/category/<%= data[i].id %>?_method=DELETE" method="POST">
            <a href="/category/edit/<%= data[i].id %> " class="btn btn-warning">
              <i class="fas fa-pencil-alt"></i>
               Edit
            </a>
            <button class="btn btn-danger">
              <i class="fas fa-trash-alt"></i>
              Delete
            </button>
          </form>
        </td>
      </tr>
    <% } %>  
  </tbody>
</table>
