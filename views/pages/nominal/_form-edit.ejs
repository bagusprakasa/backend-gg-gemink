<form action="/nominal/<%= data.id %>?_method=PUT" method="POST">
  <div class="row">
    <div class="col-12">
      <div class="form-group">
        <label for="exampleInputEmail1">Name Coin</label>
        <select
          class="form-control select2"
          style="width: 100%"
          name="name"
          required
        >
          <option>--- Choose Coin ----</option>
          <option value="Gold" <%= data.name == "Gold" ? "selected" : "" %>>Gold</option>
          <option value="Diamond" <%= data.name == "Diamond" ? "selected" : "" %>>Diamond</option>
          <option value="Jewel" <%= data.name == "Jewel" ? "selected" : "" %>>Jewel</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Quantity Nominal</label>
        <input
          type="number"
          class="form-control"
          id="exampleInputEmail1"
          placeholder="Ex : 2"
          name="qty"
          step="any"
          value="<%= data.qty %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Price Nominal</label>
        <input
          type="text"
          class="form-control"
          id="exampleInputEmail1"
          placeholder="Ex : 15000"
          name="price"
          step="any"
          value="<%= data.price %>"
        />
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  <button type="reset" class="btn btn-secondary">Reset</button>
</form>
