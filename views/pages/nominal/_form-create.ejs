<form action="/nominal" method="POST">
  <div class="row">
    <div class="col-md-12">
      <div class="form-group">
        <label for="exampleInputEmail1">Name Coin</label>
        <select
          class="form-control select2"
          style="width: 100%"
          name="name"
          required
        >
          <option>--- Choose Coin ----</option>
          <option value="Gold">Gold</option>
          <option value="Diamond">Diamond</option>
          <option value="Jewel">Jewel</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Quantity Nominal</label>
        <input
          type="number"
          class="form-control"
          id="exampleInputEmail1"
          placeholder="Ex : 2"
          name="qty"
          step="any"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Price Nominal</label>
        <input
          type="number"
          class="form-control"
          id="exampleInputEmail1"
          placeholder="Ex : 15000"
          name="price"
          step="any"
        />
      </div>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  <button type="reset" class="btn btn-secondary">Reset</button>
</form>
